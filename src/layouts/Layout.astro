---
import SpeedInsights from "@vercel/speed-insights/astro";
import StatusLine from "../components/StatusLine.astro";
import MobileNav from "../components/MobileNav.astro";
import Nav from "../components/Nav.astro";
import SpinningCat from "../components/SpinningCat.astro";
import DoomFire from "../components/DoomFire.astro";
import MatrixRain from "../components/MatrixRain.astro";
import LightningStorm from "../components/LightningStorm.astro";
import SakuraFall from "../components/SakuraFall.astro";
import BrowserWarning from "../components/BrowserWarning.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Utsav Balar's portfolio - Linux kernel developer, system programmer, and open source enthusiast"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Speculation Rules API for prefetching and prerendering -->
    <script
      type="speculationrules"
      set:html={JSON.stringify({
        prefetch: [
          {
            source: "list",
            urls: ["/about/", "/projects/", "/quotes/", "/bookbits/", "/resume/", "/tutorials/"],
          },
        ],
        prerender: [{ where: { href_matches: "/tutorials/*" }, eagerness: "moderate" }],
      })}
    />

    <!-- Critical resource hints -->
    <link rel="dns-prefetch" href="https://utsavbalar.in" />
    <link rel="preconnect" href="https://utsavbalar.in" />

    <!-- Critical font preload with high priority -->
    <link
      rel="preload"
      href="/fonts/DepartureMono/DepartureMonoNerdFontMono-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
      fetchpriority="high"
    />

    <!-- Non-critical texture preloads with low priority -->
    <link rel="preload" href="/noise-textures/noisy-texture-200x200-1.png" as="image" fetchpriority="low" />
    <link rel="preload" href="/grunge.webp" as="image" fetchpriority="low" />

    <!-- Theme initialization (must run before body renders) -->
    <script is:inline src="/scripts/theme-init.js"></script>

    <!-- Keyboard navigation -->
    <script is:inline src="/scripts/keyboard-nav.js"></script>

    <link rel="dns-prefetch" href="https://api.github.com" />
    <link rel="dns-prefetch" href="https://cataas.com" />
    <link rel="preconnect" href="https://api.github.com" crossorigin />
    <link rel="preconnect" href="https://cataas.com" crossorigin />
  </head>
  <body>
    <BrowserWarning />
    <div class="noise-overlay" transition:persist="noise"></div>
    <div class="grunge-overlay" transition:persist="grunge"></div>
    <MatrixRain transition:persist="matrix" />
    <DoomFire transition:persist="fire" />
    <LightningStorm transition:persist="storm" />
    <SakuraFall transition:persist="sakura" />
    <div
      class="pt-18 page-content relative min-h-screen p-4 max-md:pb-21 sm:p-6 md:p-8"
      style="contain: layout style paint; contain-intrinsic-size: 100vw 100vh;"
      id="main-content"
      transition:animate="fade"
      transition:name="main"
    >
      <header class="mb-8">
        <Nav />
      </header>
      <slot />
    </div>
    <MobileNav transition:persist="mobile-nav" />
    <StatusLine transition:persist="status" />
    <SpinningCat transition:persist="cat" />
    <SpeedInsights />
  </body>
</html>

<script>
  // ViewTransitions event handling for terminal effects
  document.addEventListener("astro:page-load", () => {
    const mainContent = document.getElementById("main-content");
    mainContent?.classList.add("page-content-loaded");
    // Remove the class after animation completes (200ms) to prevent accumulation
    setTimeout(() => {
      mainContent?.classList.remove("page-content-loaded");
    }, 250);
  });

  document.addEventListener("astro:before-preparation", () => {
    const mainContent = document.getElementById("main-content");
    mainContent?.classList.add("page-content-exiting");
  });

  document.addEventListener("astro:after-swap", () => {
    const mainContent = document.getElementById("main-content");
    mainContent?.classList.remove("page-content-exiting");
  });

  // Lazy animations for desktop only
  function setupLazyAnimations() {
    if (window.innerWidth >= 768) {
      const observerOptions = {
        threshold: 0.1,
        rootMargin: "50px",
      };

      const animationObserver = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("animate-in");
            animationObserver.unobserve(entry.target);
          }
        });
      }, observerOptions);

      document.querySelectorAll(".terminal-card, .content-section, .project-card").forEach((el) => {
        // Only add animate-ready if not already present (prevents duplication on view transitions)
        if (!el.classList.contains("animate-ready")) {
          el.classList.add("animate-ready");
        }

        // Check if element is already in viewport
        const rect = el.getBoundingClientRect();
        const isInViewport = rect.top < window.innerHeight && rect.bottom > 0;

        if (isInViewport) {
          // Element is already visible, add animate-in immediately
          el.classList.add("animate-in");
        } else {
          // Element is below the fold, observe it
          animationObserver.observe(el);
        }
      });
    }
  }

  // Run on initial load and view transitions
  document.addEventListener("astro:page-load", setupLazyAnimations);
</script>

<style is:global>
  @import "../styles/global.css";

  html {
    overscroll-behavior-y: contain;
    overscroll-behavior-x: none;
  }

  body {
    touch-action: pan-y;
    overscroll-behavior: contain;
  }
</style>
