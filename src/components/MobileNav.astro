---
const navLinks = [
  { href: "/", text: "Home", icon: "~" },
  { href: "/about/", text: "About", icon: "&" },
  { href: "/projects/", text: "Projects", icon: ">" },
  { href: "/resume/", text: "Resume", icon: "@" },
  { href: "/tutorials/", text: "Tutorials", icon: "#" },
];

const currentPath = Astro.url.pathname;
---

<nav class="mobile-nav">
  <ul>
    {
      navLinks.map((link) => {
        const isActive =
          currentPath === link.href || (link.href !== "/" && currentPath.startsWith(link.href));
        return (
          <li>
            <a href={link.href} class:list={isActive ? "active" : ""}>
              <span class="icon">{link.icon}</span>
              <span class="label">{link.text}</span>
            </a>
          </li>
        );
      })
    }
  </ul>
</nav>

<style>
  .mobile-nav {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: var(--bg-primary);
    border-top: 1px solid var(--border-color);
    z-index: 35; /* Above content but below theme selector */
    display: none;
    padding: 0.5rem 0;
    height: 60px;
    /* Removed backdrop-filter for performance */
    /* Solid background instead of transparency */
    box-shadow: 0 -1px 0 var(--border-color);
    width: 100%;
    box-sizing: border-box;
    /* Performance optimizations */
    contain: layout style paint;
    will-change: auto;
    -webkit-transform: translateZ(0);
    transform: translateZ(0);
  }

  @media (max-width: 767px) {
    .mobile-nav {
      display: block;
    }
  }

  ul {
    display: flex;
    justify-content: space-around;
    align-items: center;
    list-style: none;
    padding: 0;
    margin: 0;
    height: 100%;
  }

  li {
    flex: 1;
  }

  a {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    color: var(--text-secondary);
    padding: 0.25rem;
    /* Faster transitions for mobile */
    transition: color 0.1s ease;
    position: relative;
    /* Prevent layout shifts */
    will-change: auto;
  }

  a:hover,
  a.active {
    color: var(--accent-primary);
  }

  a.active::before {
    content: "";
    position: absolute;
    top: -0.5rem;
    left: 50%;
    transform: translateX(-50%);
    width: 2rem;
    height: 2px;
    background-color: var(--accent-primary);
    border-radius: 1px;
  }

  .icon {
    font-size: 1.5rem;
    margin-bottom: 0.25rem;
    display: block;
    font-weight: bold;
    font-family: monospace;
  }

  .label {
    font-size: 0.625rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-weight: 500;
  }

  a:focus-visible {
    outline: 2px solid var(--accent-primary);
    outline-offset: -2px;
    border-radius: 0.25rem;
  }

  /* Add subtle animation on tap */
  a:active {
    transform: scale(0.95);
  }

  /* Very small screens */
  @media (max-width: 320px) {
    .icon {
      font-size: 1.25rem;
    }

    .label {
      font-size: 0.5rem;
    }

    a {
      padding: 0.125rem;
    }
  }
</style>
