---
import BaseCard from "@components/BaseCard.astro";
import { getStaggerDelay } from "@utils/animations";

export interface Props {
  id: number;
  text: string;
  author: string;
  featured?: boolean;
}

const { id, text, author, featured = false } = Astro.props;

const typingDelay = getStaggerDelay(id, 0.1);
---

<BaseCard
  class:list={["quote-card", featured && "quote-featured"]}
  animated={true}
  animationDelay={typingDelay}
  hoverable={true}
  featured={featured}
>
  <Fragment slot="header">
    <div class="quote-number">
      <span class="number-prefix">#</span>{id.toString().padStart(2, "0")}
    </div>
  </Fragment>

  <blockquote slot="content" class="quote-content">
    <span class="quote-mark quote-mark-open">"</span>
    <span class="quote-text">{text}</span>
    <span class="quote-mark quote-mark-close">"</span>
  </blockquote>

  <Fragment slot="footer">
    <div class="quote-author">
      <span class="author-prefix">â€”</span>
      <span class="author-name">{author}</span>
    </div>
  </Fragment>
</BaseCard>

<style>
  /* QuoteCard-specific content styling */
  .quote-content {
    display: block;
    color: var(--text-primary);
    font-family: monospace;
    line-height: 1.6;
    font-size: 0.9rem;
    position: relative;
  }

  /* Quote number styling */
  .quote-number {
    font-size: 0.875rem;
    font-weight: bold;
    color: var(--text-secondary);
    font-family: DepartureMono, monospace;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.7;
  }

  /* Featured quote styling removed - BaseCard handles featured state */

  .number-prefix {
    color: var(--accent-primary);
    margin-right: 0.25rem;
  }

  /* Quote marks styling */
  .quote-mark {
    color: var(--accent-primary);
    font-size: 1.2rem;
    font-weight: bold;
    opacity: 0.5;
    font-family: Georgia, serif;
  }

  .quote-mark-open {
    margin-right: 0.25rem;
  }

  .quote-mark-close {
    margin-left: 0.25rem;
  }

  .quote-text {
    font-style: italic;
  }

  /* Quote author styling */
  .quote-author {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
    font-family: DepartureMono, monospace;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .author-prefix {
    color: var(--accent-primary);
    font-weight: bold;
  }

  .author-name {
    font-weight: 500;
  }

  /* QuoteCard uses BaseCard's default hover effects */

  /* Mobile responsive adjustments */
  @media (max-width: 640px) {
    .quote-content {
      font-size: 0.85rem;
    }

    .quote-author {
      font-size: 0.75rem;
    }
  }
</style>
