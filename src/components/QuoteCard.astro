---
export interface Props {
  id: number;
  text: string;
  author: string;
  featured?: boolean;
}

const { id, text, author, featured = false } = Astro.props;

const typingDelay = `${id * 0.1}s`;
---

<div
  class:list={[
    "card-base",
    "card-base-default",
    "card-base-hoverable",
    "glitch-border-hover",
    featured && "card-base-featured",
    featured && "quote-featured",
  ]}
  style={`animation: slide-in 0.6s ease-out forwards; animation-delay: ${typingDelay}; opacity: 0;`}
>
  <div class="card-section-header quote-header">
    <div class="quote-number">
      <span class="number-prefix">#</span>{id.toString().padStart(2, "0")}
    </div>
  </div>

  <blockquote class="card-section-content quote-content">
    <span class="quote-mark quote-mark-open">"</span>
    <span class="quote-text">{text}</span>
    <span class="quote-mark quote-mark-close">"</span>
  </blockquote>

  <div class="card-section-footer quote-footer">
    <div class="quote-author">
      <span class="author-prefix">—</span>
      <span class="author-name">{author}</span>
    </div>
  </div>
</div>

<style>
  /* QuoteCard-specific content styling */
  .quote-content {
    display: block;
    color: var(--text-primary);
    font-family: monospace;
    line-height: 1.6;
    font-size: 0.9rem;
    position: relative;
  }

  /* Quote number styling */
  .quote-number {
    font-size: 0.875rem;
    font-weight: bold;
    color: var(--text-secondary);
    font-family: DepartureMono, monospace;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.7;
  }

  .quote-featured .quote-number {
    color: var(--accent-primary);
  }

  .number-prefix {
    color: var(--accent-primary);
    margin-right: 0.25rem;
  }

  /* Quote marks styling */
  .quote-mark {
    color: var(--accent-primary);
    font-size: 1.2rem;
    font-weight: bold;
    opacity: 0.5;
    font-family: Georgia, serif;
  }

  .quote-mark-open {
    margin-right: 0.25rem;
  }

  .quote-mark-close {
    margin-left: 0.25rem;
  }

  .quote-text {
    font-style: italic;
  }

  /* Quote author styling */
  .quote-author {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
    font-family: DepartureMono, monospace;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .author-prefix {
    color: var(--accent-primary);
    font-weight: bold;
  }

  .author-name {
    font-weight: 500;
  }

  /* Terminal cursor and CRT glitch effects (component-specific targeting) */
  @media (hover: hover) {
    .card-base-hoverable:hover .quote-text::after {
      content: "▊";
      animation: cursor-blink 1s infinite;
      color: var(--accent-primary);
      font-weight: bold;
      margin-left: 2px;
    }

    .card-base-hoverable:hover .quote-content {
      animation: crt-text-glitch 0.5s ease-in-out;
    }
  }

  /* Mobile responsive adjustments */
  @media (max-width: 640px) {
    .quote-content {
      font-size: 0.85rem;
    }

    .quote-author {
      font-size: 0.75rem;
    }
  }
</style>
