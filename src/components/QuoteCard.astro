---
export interface Props {
  id: number;
  text: string;
  author: string;
  featured?: boolean;
}

const { id, text, author, featured = false } = Astro.props;

// Create a typing animation delay based on quote index
const typingDelay = `${id * 0.1}s`;
---

<div
  class:list={["quote-card glitch-border-hover", { "quote-featured": featured }]}
  style={`animation-delay: ${typingDelay}`}
>
  <div class="quote-number">
    <span class="number-prefix">#</span>{id.toString().padStart(2, "0")}
  </div>

  <blockquote class="quote-text">
    <span class="quote-mark quote-mark-open">"</span>
    <span class="quote-content">{text}</span>
    <span class="quote-mark quote-mark-close">"</span>
  </blockquote>

  <div class="quote-author">
    <span class="author-prefix">â€”</span>
    <span class="author-name">{author}</span>
  </div>
</div>

<style>
  .quote-card {
    @apply p-4 transition-all duration-300;
    border: 1px solid rgba(var(--border-color-rgb), 0.5);
    background: rgba(var(--bg-color-rgb), 0.05);
    backdrop-filter: blur(8px) saturate(1.1);
    -webkit-backdrop-filter: blur(8px) saturate(1.1);
    cursor: default;
    position: relative;
    overflow: hidden;
    box-shadow:
      0 2px 6px rgba(0, 0, 0, 0.04),
      inset 0 1px 0 rgba(255, 255, 255, 0.02);
    animation: fade-in 0.5s ease-out forwards;
    opacity: 0;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .quote-card:hover {
    border-color: var(--accent-primary);
    background: rgba(var(--bg-color-rgb), 0.08);
    backdrop-filter: blur(10px) saturate(1.2);
    -webkit-backdrop-filter: blur(10px) saturate(1.2);
    box-shadow:
      0 0 10px rgba(var(--accent-primary-rgb), 0.2),
      0 4px 12px rgba(0, 0, 0, 0.06),
      inset 0 1px 0 rgba(255, 255, 255, 0.04);
    transform: translateY(-2px);
  }

  .quote-featured {
    border-left-width: 3px;
    border-left-color: var(--accent-primary);
  }

  .quote-featured .quote-number {
    color: var(--accent-primary);
  }

  .quote-number {
    @apply mb-3 text-sm font-bold;
    color: var(--text-secondary);
    font-family: DepartureMono, monospace;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.7;
  }

  .number-prefix {
    color: var(--accent-primary);
    @apply mr-1;
  }

  .quote-text {
    @apply mb-4 block;
    color: var(--text-primary);
    font-family: monospace;
    line-height: 1.6;
    font-size: 0.9rem;
    position: relative;
  }

  .quote-mark {
    color: var(--accent-primary);
    font-size: 1.2rem;
    font-weight: bold;
    opacity: 0.5;
    font-family: Georgia, serif;
  }

  .quote-mark-open {
    @apply mr-1;
  }

  .quote-mark-close {
    @apply ml-1;
  }

  .quote-content {
    font-style: italic;
  }

  .quote-author {
    @apply flex items-center gap-2 text-sm;
    color: var(--text-secondary);
    font-family: DepartureMono, monospace;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .author-prefix {
    color: var(--accent-primary);
    font-weight: bold;
  }

  .author-name {
    font-weight: 500;
  }

  /* Typing effect on hover */
  .quote-card:hover .quote-content::after {
    content: "_";
    animation: blink 1s infinite;
    color: var(--accent-primary);
    font-weight: bold;
  }

  @keyframes blink {
    0%,
    50% {
      opacity: 1;
    }
    51%,
    100% {
      opacity: 0;
    }
  }

  /* Glitch effect on hover */
  .quote-card:hover .quote-text {
    animation: glitch-text 0.3s ease-in-out;
  }

  @keyframes glitch-text {
    0%,
    100% {
      text-shadow: none;
    }
    25% {
      text-shadow:
        -1px 0 var(--term-bright-red),
        1px 0 var(--term-bright-cyan);
    }
    50% {
      text-shadow:
        1px 0 var(--term-bright-green),
        -1px 0 var(--term-bright-magenta);
    }
    75% {
      text-shadow:
        -1px 0 var(--term-bright-yellow),
        1px 0 var(--term-bright-blue);
    }
  }

  /* Mobile responsive adjustments */
  @media (max-width: 640px) {
    .quote-card {
      @apply p-3;
    }

    .quote-text {
      font-size: 0.85rem;
    }

    .quote-author {
      font-size: 0.75rem;
    }
  }
</style>
