---
const navLinks = [
  { href: "/", text: "Home" },
  { href: "/projects/", text: "Projects" },
  { href: "/tutorials/", text: "Tutorials" },
  { href: "/skills/", text: "Skills" },
  { href: "/resume/", text: "Resume" },
  { href: "/about/", text: "About" },
];
---

<nav class="hidden md:block">
  <ul class="m-0 flex list-none flex-wrap justify-center gap-6 p-0 lg:gap-8">
    {
      navLinks.map((link) => (
        <li class="whitespace-nowrap">
          <a
            href={link.href}
            class="rounded px-2 py-1 no-underline transition-all duration-200 ease-in-out hover:bg-terminal-secondary hover:underline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary"
          >
            [ {link.text} ]
          </a>
        </li>
      ))
    }
  </ul>
</nav>
