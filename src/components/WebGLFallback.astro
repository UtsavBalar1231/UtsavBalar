---
interface Props {
  show: boolean;
}

const { show } = Astro.props;
---

{
  show && (
    <div class="webgl-fallback" role="alert">
      <div class="fallback-content">
        <h2>Modern Browser Required</h2>
        <p>Visual effects require WebGL 2.0 support.</p>
        <p>Please update to:</p>
        <ul>
          <li>Chrome/Edge 56+</li>
          <li>Firefox 51+</li>
          <li>Safari 15+</li>
        </ul>
      </div>
    </div>
  )
}

<style>
  @layer modals {
    .webgl-fallback {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: var(--bg-secondary);
      border: 2px solid var(--accent-primary);
      border-radius: 8px;
      padding: 2rem;
      max-width: 500px;
      width: 90%;
      box-shadow:
        0 0 20px rgba(var(--accent-primary-rgb), 0.3),
        0 0 40px rgba(var(--accent-primary-rgb), 0.1);
      animation: fadeIn 0.3s ease-out;
    }

    .fallback-content {
      text-align: center;
    }

    .fallback-content h2 {
      color: var(--accent-primary);
      font-size: 1.5rem;
      margin-bottom: 1rem;
      text-shadow: var(--text-glow);
    }

    .fallback-content p {
      color: var(--text-primary);
      margin-bottom: 1rem;
      line-height: 1.6;
    }

    .fallback-content ul {
      list-style: none;
      padding: 0;
      margin: 1rem 0 0 0;
    }

    .fallback-content li {
      color: var(--text-secondary);
      padding: 0.5rem;
      margin: 0.25rem 0;
      background: var(--bg-tertiary);
      border-radius: 4px;
      border-left: 3px solid var(--accent-primary);
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translate(-50%, -50%) scale(0.9);
      }
      to {
        opacity: 1;
        transform: translate(-50%, -50%) scale(1);
      }
    }

    @media (max-width: 640px) {
      .webgl-fallback {
        width: 95%;
        padding: 1.5rem;
      }

      .fallback-content h2 {
        font-size: 1.25rem;
      }
    }
  }
</style>
