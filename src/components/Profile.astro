---
import GitHubAvatar from "./GitHubAvatar.astro";

const profile = {
  name: "Utsav Balar",
  title: "Embedded Linux & BSP Engineer",
  location: "Gujarat, India",
  description:
    "Passionate Linux kernel and BSP engineer with expertise in embedded systems, custom ROM development, and FOSS contributions. Currently pursuing a Master's in Computer Science while working as a freelance Linux Kernel Developer.",
};
---

<div
  class="flex flex-col gap-4 items-center text-center md:items-start md:text-left"
>
  <div class="flex flex-col md:flex-row gap-3 md:gap-4 md:items-center">
    <GitHubAvatar
      width={96}
      height={96}
      class="w-20 h-20 md:w-24 md:h-24 rounded-full object-cover border-2 border-primary text-text-primary mx-auto md:mx-0"
    />

    <div>
      <h1
        class="text-xl md:text-2xl font-extrabold mb-1 inline-block relative text-text-primary"
      >
        {profile.name}
      </h1>

      <p class="text-xs md:text-sm mb-2 text-primary">
        {profile.title}
      </p>

      <p
        class="flex items-center justify-center md:justify-start text-xs md:text-sm text-gray-400"
      >
        <svg
          class="-mt-0.5 inline mr-2"
          fill="none"
          height="14"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          viewBox="0 0 24 24"
          width="14"
          xmlns="http://www.w3.org/2000/svg"
          ><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"
          ></path><circle cx="12" cy="10" r="3"></circle></svg
        >
        {profile.location}
      </p>
    </div>
  </div>

  <p class="text-xs md:text-sm leading-relaxed mt-1 md:mt-2 text-gray-400">
    {profile.description}
  </p>
</div>
