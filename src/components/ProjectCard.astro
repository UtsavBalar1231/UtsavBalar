---
export interface Props {
  title: string;
  description: string;
  tags: string[];
  githubUrl?: string;
  demoUrl?: string;
  featured?: boolean;
}

const { title, description, tags, githubUrl, demoUrl, featured = false } = Astro.props;
---

<div
  class:list={[
    "mb-6 border border-terminal bg-terminal-secondary p-4 transition-all duration-300 hover:border-primary hover:shadow-[0_0_10px_rgba(var(--border-color-rgb),0.3)] max-sm:p-3",
    { "border-l-[3px] border-l-primary": featured },
  ]}
>
  <div class="mb-3 flex items-start justify-between">
    <h3 class="font-mono text-lg font-bold text-terminal max-sm:text-base">
      <span class="mr-2 text-primary">&gt;</span>
      {title}
    </h3>
    {featured && <span class="bg-primary px-2 py-1 font-mono text-xs text-black">Featured</span>}
  </div>

  <p class="mb-4 text-sm leading-relaxed text-terminal-secondary">{description}</p>

  <div class="mb-4 flex flex-wrap gap-2">
    {
      tags.map((tag) => (
        <span class="border border-terminal px-2 py-1 font-mono text-xs text-terminal-secondary transition-all duration-200 hover:border-primary hover:text-primary">
          {tag}
        </span>
      ))
    }
  </div>

  <div class="flex gap-4">
    {
      githubUrl && (
        <a
          href={githubUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="font-mono text-sm text-primary no-underline transition-opacity duration-200 hover:underline hover:opacity-80"
        >
          <span class="text-terminal-secondary">[</span>
          GitHub
          <span class="text-terminal-secondary">]</span>
        </a>
      )
    }
    {
      demoUrl && (
        <a
          href={demoUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="font-mono text-sm text-primary no-underline transition-opacity duration-200 hover:underline hover:opacity-80"
        >
          <span class="text-terminal-secondary">[</span>
          Demo
          <span class="text-terminal-secondary">]</span>
        </a>
      )
    }
  </div>
</div>
