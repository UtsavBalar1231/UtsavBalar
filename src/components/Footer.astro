---
const currentYear = new Date().getFullYear();
---

<footer class="terminal-footer">
	<div class="footer-content">
		<div class="copyright">
			© {currentYear} Utsav Balar. Licensed under MIT.
		</div>

		<div class="build-info">
			Built with Astro · Hosted on Vercel · Source available on GitHub
		</div>

		<div class="terminal-line">
			<span class="prompt">user@embedded-linux:~$</span>
			<span class="cursor"></span>
		</div>
	</div>
</footer>

<style>
	.terminal-footer {
		@apply mt-16 pb-8;
		border-top: 1px solid var(--border-color);
		padding-top: 2rem;
	}

	.footer-content {
		@apply max-w-4xl mx-auto px-4;
		font-family: "AdwaitaMono", monospace;
		font-size: 0.875rem;
		color: var(--text-secondary);
	}

	.terminal-line {
		@apply mb-2;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.prompt {
		color: var(--accent-primary);
		font-weight: bold;
	}

	.command {
		color: var(--text-primary);
	}

	.output {
		@apply ml-4 mb-4;
		padding: 0.5rem 0;
	}

	.locale-line {
		@apply mb-1;
		display: flex;
		gap: 1rem;
	}

	.locale-code {
		color: var(--text-primary);
		min-width: 150px;
	}

	.locale-comment {
		color: var(--text-secondary);
		opacity: 0.7;
	}

	.copyright {
		@apply mt-6 mb-2 text-center;
		color: var(--text-secondary);
		font-size: 0.8rem;
	}

	.build-info {
		@apply mb-4 text-center;
		color: var(--text-secondary);
		font-size: 0.75rem;
		opacity: 0.6;
	}

	.cursor {
		display: inline-block;
		width: 8px;
		height: 16px;
		background-color: var(--accent-primary);
		animation: blink 1s infinite;
	}

	@keyframes blink {
		0%, 49% {
			opacity: 1;
		}
		50%, 100% {
			opacity: 0;
		}
	}

	@media (max-width: 640px) {
		.terminal-footer {
			@apply mt-8 pb-20;
		}

		.footer-content {
			font-size: 0.75rem;
		}

		.locale-line {
			flex-direction: column;
			gap: 0.25rem;
		}

		.locale-code {
			min-width: auto;
		}
	}
</style>