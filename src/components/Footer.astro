<footer class="terminal-footer">
  <div class="footer-spacer"></div>
</footer>

<style>
  /* Footer now acts as a spacer for the StatusLine */
  .terminal-footer {
    height: 28px; /* Match StatusLine height */
    margin-top: 2rem;
  }

  .footer-spacer {
    height: 100%;
  }

  @media (max-width: 767px) {
    .terminal-footer {
      height: calc(28px + 56px); /* StatusLine (28px) + MobileNav (56px) = 84px */
      margin-top: 1rem;
    }
  }
</style>
