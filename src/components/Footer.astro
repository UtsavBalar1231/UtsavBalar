---
const currentYear = new Date().getFullYear();
---

<footer class="terminal-footer">
  <div class="footer-content">
    <div class="copyright">
      © {currentYear} Utsav Balar. Licensed under MIT.
    </div>

    <div class="build-info">
      Built with <span class="tech-link astro">Astro</span> · Hosted on <span
        class="tech-link vercel">Vercel</span
      > · Source available on <span class="tech-link github">GitHub</span>
    </div>

    <div class="terminal-line">
      <span class="prompt">user@embedded-linux:~$</span>
      <span class="cursor"></span>
    </div>
  </div>
</footer>

<style>
  .terminal-footer {
    @apply mt-16 pb-8;
    border-top: 1px solid var(--border-color);
    padding-top: 2rem;
  }

  .footer-content {
    @apply mx-auto max-w-4xl px-4;
    font-family: "AdwaitaMono", monospace;
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .terminal-line {
    @apply mb-2;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .prompt {
    color: var(--term-bright-green);
    font-weight: bold;
  }

  .tech-link {
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .tech-link.astro {
    color: var(--term-bright-magenta);
  }

  .tech-link.astro:hover {
    color: var(--term-bright-cyan);
    text-decoration: underline;
  }

  .tech-link.vercel {
    color: var(--term-bright-cyan);
  }

  .tech-link.vercel:hover {
    color: var(--term-bright-yellow);
    text-decoration: underline;
  }

  .tech-link.github {
    color: var(--term-bright-green);
  }

  .tech-link.github:hover {
    color: var(--term-bright-magenta);
    text-decoration: underline;
  }

  .copyright {
    @apply mb-2 mt-6 text-center;
    color: var(--text-secondary);
    font-size: 0.8rem;
  }

  .build-info {
    @apply mb-4 text-center;
    color: var(--text-secondary);
    font-size: 0.75rem;
    opacity: 0.6;
  }

  .cursor {
    display: inline-block;
    width: 8px;
    height: 16px;
    background-color: var(--term-bright-green);
    animation: blink 1s infinite;
  }

  @keyframes blink {
    0%,
    49% {
      opacity: 1;
    }
    50%,
    100% {
      opacity: 0;
    }
  }

  @media (max-width: 640px) {
    .terminal-footer {
      @apply mt-8 pb-20;
    }

    .footer-content {
      font-size: 0.75rem;
    }
  }
</style>
