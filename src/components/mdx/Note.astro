---
/**
 * Note Component - For highlighting important information in tutorials
 */

interface Props {
  title?: string;
}

const { title = "Note" } = Astro.props;
---

<div class="note-container my-6 p-4 rounded-md border-l-4 border-[var(--note-border)] bg-[var(--note-bg)]">
  <div class="note-title font-medium mb-2 text-[var(--note-title)]">
    {title}
  </div>
  <div class="note-content text-[var(--note-text)]">
    <slot />
  </div>
</div>

<style>
  .note-container {
    position: relative;
  }
  
  .note-content :global(p) {
    margin-bottom: 0.75rem;
  }
  
  .note-content :global(p:last-child) {
    margin-bottom: 0;
  }
</style> 