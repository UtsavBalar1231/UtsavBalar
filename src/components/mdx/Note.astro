---
interface Props {
  title?: string;
}

const { title = "Note" } = Astro.props;
---

<div
  role="note"
  aria-label={`Note: ${title}`}
  class="note-container group relative my-6 overflow-hidden rounded-md border-l-4 border-info shadow-[0_2px_5px_rgba(0,0,0,0.05)] transition-all duration-200 ease-in-out hover:border-l-[6px] hover:pl-[calc(1rem-2px)] hover:shadow-[0_2px_8px_rgba(0,0,0,0.1)]"
>
  <div
    class="absolute right-0 top-0 h-32 w-32 -translate-y-12 translate-x-12 rounded-full bg-info opacity-5"
  >
  </div>
  <div class="relative z-10 p-4">
    <div class="mb-3 flex items-center font-medium text-info font-ui-badge">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="mr-2 h-5 max-h-[20px] min-h-[20px] w-5 min-w-[20px] max-w-[20px]"
      >
        <path
          fill-rule="evenodd"
          d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12zm8.706-1.442c1.146-.573 2.437.463 2.126 1.706l-.709 2.836.042-.02a.75.75 0 01.67 1.34l-.04.022c-1.147.573-2.438-.463-2.127-1.706l.71-2.836-.042.02a.75.75 0 11-.671-1.34l.041-.022zM12 9a.75.75 0 100-1.5.75.75 0 000 1.5z"
          clip-rule="evenodd"></path>
      </svg>
      {title}
    </div>
    <div class="note-content text-text-primary">
      <slot />
    </div>
  </div>
</div>

<style>
  /* Global styles for nested content */
  .note-content :global(p) {
    margin-bottom: 0.75rem;
  }

  .note-content :global(p:last-child) {
    margin-bottom: 0;
  }

  .note-content :global(a) {
    color: var(--info);
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
  }

  .note-content :global(a:hover) {
    text-decoration-thickness: 2px;
  }

  .note-content :global(code) {
    border-radius: 0.25rem;
    background-color: color-mix(in srgb, var(--color-info) 10%, var(--bg-secondary));
    padding-left: 0.3em;
    padding-right: 0.3em;
    padding-top: 0.1em;
    padding-bottom: 0.1em;
    font-family: monospace;
    font-size: 0.9em;
  }
  .note-container {
    background: rgba(var(--bg-color-rgb), 0.04);
    backdrop-filter: blur(10px) saturate(1.1);
  }
</style>
