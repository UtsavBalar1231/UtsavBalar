---
/**
 * Terminal Component - For displaying command-line examples
 */

interface Props {
  title?: string;
}

const { title = "Terminal" } = Astro.props;
---

<div class="terminal-container my-6 rounded-md overflow-hidden border border-[var(--border)]">
  {title && (
    <div class="terminal-title px-4 py-2 text-sm font-mono bg-[var(--terminal-title-bg)] text-[var(--terminal-title-text)] flex items-center">
      <span class="mr-2">$</span> {title}
    </div>
  )}
  <div class="terminal-content p-4 font-mono text-sm bg-[var(--terminal-bg)] text-[var(--terminal-text)] overflow-x-auto">
    <slot />
  </div>
</div>

<style>
  .terminal-container {
    position: relative;
  }
  
  .terminal-content :global(pre) {
    margin: 0;
    padding: 0;
    background: transparent !important;
  }
  
  .terminal-content :global(code) {
    font-family: 'AdwaitaMono', monospace;
    tab-size: 2;
  }
</style> 