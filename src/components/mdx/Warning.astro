---
interface Props {
  title?: string;
}

const { title = "Warning" } = Astro.props;
---

<div
  role="alert"
  aria-live="polite"
  aria-label={`Warning: ${title}`}
  class="warning-container group relative my-6 overflow-hidden rounded-md border-l-4 border-warning shadow-[0_2px_5px_rgba(0,0,0,0.05)] transition-all duration-200 ease-in-out hover:border-l-[6px] hover:pl-[calc(1rem-2px)] hover:shadow-[0_2px_8px_rgba(0,0,0,0.1)]"
>
  <div
    class="absolute right-0 top-0 h-32 w-32 -translate-y-12 translate-x-12 rounded-full bg-warning opacity-5"
  >
  </div>
  <div class="relative z-10 p-4">
    <div class="mb-3 flex items-center font-medium text-warning font-ui-badge">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="mr-2 h-5 max-h-[20px] min-h-[20px] w-5 min-w-[20px] max-w-[20px]"
      >
        <path
          fill-rule="evenodd"
          d="M9.401 3.003c1.155-2 4.043-2 5.197 0l7.355 12.748c1.154 2-.29 4.5-2.599 4.5H4.645c-2.309 0-3.752-2.5-2.598-4.5L9.4 3.003zM12 8.25a.75.75 0 01.75.75v3.75a.75.75 0 01-1.5 0V9a.75.75 0 01.75-.75zm0 8.25a.75.75 0 100-1.5.75.75 0 000 1.5z"
          clip-rule="evenodd"></path>
      </svg>
      {title}
    </div>
    <div class="warning-content text-text-primary">
      <slot />
    </div>
  </div>
</div>

<style>
  /* Global styles for nested content */
  .warning-content :global(p) {
    margin-bottom: 0.75rem;
  }

  .warning-content :global(p:last-child) {
    margin-bottom: 0;
  }

  .warning-content :global(strong),
  .warning-content :global(b) {
    font-weight: 600;
    color: var(--warning);
  }

  .warning-content :global(a) {
    color: var(--warning);
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
  }

  .warning-content :global(a:hover) {
    text-decoration-thickness: 2px;
  }

  .warning-content :global(code) {
    border-radius: 0.25rem;
    background-color: color-mix(in srgb, var(--color-warning) 10%, var(--bg-secondary));
    padding-left: 0.3em;
    padding-right: 0.3em;
    padding-top: 0.1em;
    padding-bottom: 0.1em;
    font-family: monospace;
    font-size: 0.9em;
  }
  .warning-container {
    background: rgba(var(--bg-color-rgb), 0.04);
    backdrop-filter: blur(10px) saturate(1.1);
  }
</style>
