---
/**
 * Warning Component - For highlighting cautionary information in tutorials
 */

interface Props {
  title?: string;
}

const { title = "Warning" } = Astro.props;
---

<div class="warning-container my-6 p-4 rounded-md border-l-4 border-[var(--warning-border)] bg-[var(--warning-bg)]">
  <div class="warning-title font-medium mb-2 text-[var(--warning-title)]">
    {title}
  </div>
  <div class="warning-content text-[var(--warning-text)]">
    <slot />
  </div>
</div>

<style>
  .warning-container {
    position: relative;
  }
  
  .warning-content :global(p) {
    margin-bottom: 0.75rem;
  }
  
  .warning-content :global(p:last-child) {
    margin-bottom: 0;
  }
</style> 