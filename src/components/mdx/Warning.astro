---
/**
 * Warning Component - For highlighting cautionary information in tutorials
 */

interface Props {
  title?: string;
}

const { title = "Warning" } = Astro.props;
---

<div class="my-6 rounded-md border-l-4 border-warning bg-[color-mix(in_srgb,var(--color-warning)_5%,var(--bg-primary))] relative overflow-hidden shadow-[0_2px_5px_rgba(0,0,0,0.05)] transition-all duration-200 ease-in-out hover:shadow-[0_2px_8px_rgba(0,0,0,0.1)] hover:border-l-[6px] hover:pl-[calc(1rem-2px)] group">
  <div class="absolute top-0 right-0 w-32 h-32 opacity-5 rounded-full bg-warning -translate-y-12 translate-x-12"></div>
  <div class="relative z-10 p-4">
    <div class="flex items-center font-medium mb-3 text-warning">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 min-w-[20px] min-h-[20px] max-w-[20px] max-h-[20px] mr-2">
        <path fill-rule="evenodd" d="M9.401 3.003c1.155-2 4.043-2 5.197 0l7.355 12.748c1.154 2-.29 4.5-2.599 4.5H4.645c-2.309 0-3.752-2.5-2.598-4.5L9.4 3.003zM12 8.25a.75.75 0 01.75.75v3.75a.75.75 0 01-1.5 0V9a.75.75 0 01.75-.75zm0 8.25a.75.75 0 100-1.5.75.75 0 000 1.5z" clip-rule="evenodd" />
      </svg>
      {title}
    </div>
    <div class="text-text-primary warning-content">
      <slot />
    </div>
  </div>
</div>

<style>
  /* Global styles for nested content */
  .warning-content :global(p) {
    @apply mb-3;
  }
  
  .warning-content :global(p:last-child) {
    @apply mb-0;
  }
  
  .warning-content :global(strong), .warning-content :global(b) {
    @apply text-warning font-semibold;
  }
  
  .warning-content :global(a) {
    @apply text-warning underline decoration-1 underline-offset-2 hover:decoration-2;
  }
  
  .warning-content :global(code) {
    @apply font-mono bg-[color-mix(in_srgb,var(--color-warning)_10%,var(--bg-secondary))] px-[0.3em] py-[0.1em] rounded text-[0.9em];
  }
</style> 