---
const proficientSkills = [
  "C",
  "Rust",
  "Bash",
  "AWK",
  "Python",
  "Embedded Linux",
  "Linux Kernel Dev",
  "BSP Engineering",
  "Device Drivers",
  "Git",
  "AOSP",
  "Custom ROM Development",
];

const semiProficientSkills = [
  "Yocto/Buildroot Project",
  "Git Actions",
  "U-Boot",
  "Apt/Rpm/Arch Package Management",
  "ARM Architecture",
];

const familiarSkills = ["C++", "Modern Web Stack", "MongoDB", "Figma", "Qt QML", "MicroPython"];

const tools = {
  compilers: ["GCC/Clang Cross-Compiler", "GDB"],
  virtualization: ["QEMU", "Docker"],
  cicd: ["Travis CI", "Drone CI", "Jenkins"],
};
---

<div class="skills-container">
  <!-- Proficient Skills -->
  <section class="skill-section">
    <h2 class="section-title">Proficient</h2>
    <div class="skill-grid">
      {
        proficientSkills.map((skill) => (
          <div class="skill-card proficient">
            <span class="skill-name">{skill}</span>
          </div>
        ))
      }
    </div>
  </section>

  <!-- Semi-Proficient Skills -->
  <section class="skill-section">
    <h2 class="section-title">Semi-Proficient</h2>
    <div class="skill-grid">
      {
        semiProficientSkills.map((skill) => (
          <div class="skill-card semi-proficient">
            <span class="skill-name">{skill}</span>
          </div>
        ))
      }
    </div>
  </section>

  <!-- Familiar With -->
  <section class="skill-section">
    <h2 class="section-title">Familiar With</h2>
    <div class="skill-grid">
      {
        familiarSkills.map((skill) => (
          <div class="skill-card familiar">
            <span class="skill-name">{skill}</span>
          </div>
        ))
      }
    </div>
  </section>

  <!-- Development Tools -->
  <section class="skill-section">
    <h2 class="section-title">Development Tools</h2>
    <div class="tools-container">
      <div class="tool-category">
        <h3 class="tool-title">Compilers & Debugging</h3>
        <div class="skill-grid">
          {
            tools.compilers.map((tool) => (
              <div class="skill-card tool">
                <span class="skill-name">{tool}</span>
              </div>
            ))
          }
        </div>
      </div>
      <div class="tool-category">
        <h3 class="tool-title">Virtualization</h3>
        <div class="skill-grid">
          {
            tools.virtualization.map((tool) => (
              <div class="skill-card tool">
                <span class="skill-name">{tool}</span>
              </div>
            ))
          }
        </div>
      </div>
      <div class="tool-category">
        <h3 class="tool-title">CI/CD</h3>
        <div class="skill-grid">
          {
            tools.cicd.map((tool) => (
              <div class="skill-card tool">
                <span class="skill-name">{tool}</span>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>
</div>

<style>
  .skills-container {
    @apply space-y-8;
  }

  .skill-section {
    @apply mb-8;
  }

  .section-title {
    @apply mb-4 text-xl font-bold;
    font-family: "D2Coding", monospace;
  }

  /* Color each section title differently */
  .skill-section:nth-child(1) .section-title {
    color: var(--term-bright-green);
  }

  .skill-section:nth-child(2) .section-title {
    color: var(--term-bright-yellow);
  }

  .skill-section:nth-child(3) .section-title {
    color: var(--term-bright-cyan);
  }

  .skill-section:nth-child(4) .section-title {
    color: var(--term-bright-magenta);
  }

  .skill-grid {
    @apply grid gap-3;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
  }

  @media (min-width: 640px) {
    .skill-grid {
      grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    }
  }

  @media (min-width: 1024px) {
    .skill-grid {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    }
  }

  .skill-card {
    @apply p-2 text-sm;
    border: 1px solid var(--border-color);
    font-family: "D2Coding", monospace;
    transition: all 0.2s ease;
  }

  .skill-card:hover {
    background-color: var(--bg-secondary);
    transform: translateY(-2px);
  }

  .skill-card.proficient {
    border-left: 3px solid var(--term-bright-green);
    border-color: var(--term-bright-green);
  }

  .skill-card.proficient:hover {
    box-shadow: 0 0 15px rgba(var(--glow-bright-green-rgb), 0.3);
  }

  .skill-card.semi-proficient {
    border-left: 3px solid var(--term-bright-yellow);
    border-color: var(--term-bright-yellow);
  }

  .skill-card.semi-proficient:hover {
    box-shadow: 0 0 15px rgba(var(--glow-bright-yellow-rgb), 0.3);
  }

  .skill-card.familiar {
    border-left: 3px solid var(--term-bright-cyan);
    border-color: var(--term-bright-cyan);
    opacity: 0.9;
  }

  .skill-card.familiar:hover {
    opacity: 1;
    box-shadow: 0 0 15px rgba(var(--glow-bright-cyan-rgb), 0.3);
  }

  .skill-card.tool {
    border-left: 3px solid var(--term-bright-magenta);
    border-color: var(--term-bright-magenta);
  }

  .skill-card.tool:hover {
    box-shadow: 0 0 15px rgba(var(--glow-bright-magenta-rgb), 0.3);
  }

  .skill-name {
    @apply font-mono text-sm;
    color: var(--text-primary);
    display: block;
    text-align: center;
  }

  .tools-container {
    @apply space-y-6;
  }

  .tool-category {
    @apply mb-4;
  }

  .tool-title {
    @apply mb-3 text-sm font-semibold;
    color: var(--term-bright-magenta);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  /* Different colors for each tool category */
  .tool-category:nth-child(1) .tool-title {
    color: var(--term-bright-red);
  }

  .tool-category:nth-child(2) .tool-title {
    color: var(--term-bright-blue);
  }

  .tool-category:nth-child(3) .tool-title {
    color: var(--term-bright-green);
  }
</style>
