---
interface Props {
  contentId: string;
  contentName: string;
}

const { contentId, contentName } = Astro.props as Props;
---

<label
  for={contentId}
  class={[
    "tab-link",

    "flex items-center gap-1 sm:gap-2 py-2 px-2 sm:px-4 text-[10px] sm:text-xs cursor-pointer",

    "bg-black",
    "text-gray-100",
    "hover:text-primary",

    "!border-r",
    "!border-r-[var(--border-color)]",
  ].join(" ")}
>
  <svg
    fill="none"
    height="14"
    stroke="currentColor"
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="2"
    viewBox="0 0 24 24"
    width="14"
    xmlns="http://www.w3.org/2000/svg"
    class="hidden sm:block"
    ><path
      d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"
    ></path><polyline points="14 2 14 8 20 8"></polyline></svg
  >
  <h2>{contentName}</h2>
</label>
