---
import BaseCard from "@components/BaseCard.astro";
import { getNestedDelay } from "@utils/animations";

export interface Props {
  id: number;
  text: string;
  author: string;
  book: string;
  page: string;
  bookIndex?: number;
  bitIndex?: number;
}

const { id, text, author, book, page, bookIndex = 0, bitIndex = 0 } = Astro.props;

const animationDelay = getNestedDelay(bookIndex, bitIndex, 0.1, 0.05);
---

<BaseCard
  class="bookbit-card"
  animated={true}
  animationDelay={animationDelay}
  hoverable={true}
  featured={false}
>
  <Fragment slot="header">
    <div class="bookbit-header">
      <span class="bookbit-number">
        <span class="number-symbol">§</span>{id.toString().padStart(3, "0")}
      </span>
      <span class="page-reference">
        <span class="page-label">Page</span>
        {page}
      </span>
    </div>
  </Fragment>

  <blockquote slot="content" class="bookbit-text">
    <div class="quote-wrapper">
      <span class="quote-mark quote-mark-open">❝</span>
      <p class="quote-content">{text}</p>
      <span class="quote-mark quote-mark-close">❞</span>
    </div>
  </blockquote>

  <Fragment slot="footer">
    <div class="book-info">
      {
        author && author !== "" && (
          <>
            <span class="author-name">{author}</span>
            <span class="separator">•</span>
          </>
        )
      }
      <span class="book-name">{book}</span>
    </div>
  </Fragment>
</BaseCard>

<style>
  /* Override container name for bookbit-specific queries */
  :global(.bookbit-card) {
    container-name: bookbit-card;
  }

  /* BookBitCard-specific header layout */
  .bookbit-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .bookbit-number {
    font-size: 0.875rem;
    font-weight: bold;
    color: var(--text-secondary);
    font-family: DepartureMono, monospace;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .number-symbol {
    color: var(--accent-primary);
    margin-right: 0.25rem;
    font-size: 1.1rem;
  }

  .page-reference {
    font-size: 0.75rem;
    color: var(--text-secondary);
    font-family: DepartureMono, monospace;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    opacity: 0.7;
  }

  .page-label {
    color: var(--accent-primary);
    margin-right: 0.25rem;
  }

  /* BookBitCard-specific text content styling */
  .bookbit-text {
    display: block;
    color: var(--text-primary);
    font-family: monospace;
    line-height: 1.7;
    font-size: 0.95rem;
    position: relative;
  }

  .quote-wrapper {
    position: relative;
    padding: 0 1.5rem;
  }

  .quote-mark {
    position: absolute;
    color: var(--accent-primary);
    font-size: 1.5rem;
    opacity: 0.3;
    font-family: Georgia, serif;
  }

  .quote-mark-open {
    left: 0;
    top: -0.5rem;
  }

  .quote-mark-close {
    right: 0;
    bottom: -0.5rem;
  }

  .quote-content {
    font-style: italic;
    text-align: justify;
    hyphens: auto;
  }

  /* Book info styling */
  .book-info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
    font-family: DepartureMono, monospace;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .author-name {
    color: var(--text-secondary);
    font-weight: 500;
  }

  .separator {
    color: var(--accent-primary);
    opacity: 0.5;
  }

  .book-name {
    color: var(--text-primary);
    font-weight: 600;
  }

  /* BookBitCard uses BaseCard's default hover effects */

  /* Responsive adjustments based on component size */
  @container bookbit-card (max-width: 640px) {
    .bookbit-text {
      font-size: 0.875rem;
    }

    .quote-wrapper {
      padding: 0 1rem;
    }

    .quote-content {
      text-align: left;
    }

    .book-info {
      font-size: 0.75rem;
      flex-wrap: wrap;
    }

    .quote-mark {
      font-size: 1.25rem;
    }
  }
</style>
