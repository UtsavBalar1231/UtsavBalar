---
export interface Props {
  id: number;
  text: string;
  author: string;
  book: string;
  page: string;
  bookIndex?: number;
  bitIndex?: number;
}

const { id, text, author, book, page, bookIndex = 0, bitIndex = 0 } = Astro.props;

// Create staggered animation delays
const animationDelay = `${bookIndex * 0.1 + bitIndex * 0.05}s`;
---

<div class="bookbit-card glitch-border-hover" style={`animation-delay: ${animationDelay}`}>
  <div class="bookbit-header">
    <span class="bookbit-number">
      <span class="number-symbol">§</span>{id.toString().padStart(3, "0")}
    </span>
    <span class="page-reference">
      <span class="page-label">Page</span>
      {page}
    </span>
  </div>

  <blockquote class="bookbit-text">
    <div class="quote-wrapper">
      <span class="quote-mark quote-mark-open">❝</span>
      <p class="quote-content">{text}</p>
      <span class="quote-mark quote-mark-close">❞</span>
    </div>
  </blockquote>

  <div class="bookbit-footer">
    <div class="book-info">
      {
        author && author !== "" && (
          <>
            <span class="author-name">{author}</span>
            <span class="separator">•</span>
          </>
        )
      }
      <span class="book-name">{book}</span>
    </div>
  </div>
</div>

<style>
  .bookbit-card {
    @apply p-5 transition-all duration-300;
    border: 1px solid rgba(var(--border-color-rgb), 0.5);
    background: rgba(var(--bg-color-rgb), 0.05);
    backdrop-filter: blur(8px) saturate(1.1);
    -webkit-backdrop-filter: blur(8px) saturate(1.1);
    cursor: default;
    position: relative;
    overflow: hidden;
    box-shadow:
      0 2px 6px rgba(0, 0, 0, 0.04),
      inset 0 1px 0 rgba(255, 255, 255, 0.02);
    animation: slide-in 0.6s ease-out forwards;
    opacity: 0;
    border-left: 2px solid transparent;
  }

  @keyframes slide-in {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .bookbit-card:hover {
    border-color: var(--accent-primary);
    border-left-color: var(--accent-primary);
    background: rgba(var(--bg-color-rgb), 0.08);
    backdrop-filter: blur(10px) saturate(1.2);
    -webkit-backdrop-filter: blur(10px) saturate(1.2);
    box-shadow:
      0 0 15px rgba(var(--accent-primary-rgb), 0.15),
      0 4px 12px rgba(0, 0, 0, 0.06),
      inset 0 1px 0 rgba(255, 255, 255, 0.04);
    transform: translateX(4px);
  }

  .bookbit-header {
    @apply mb-4 flex items-center justify-between;
    padding-bottom: 0.5rem;
    border-bottom: 1px dashed rgba(var(--border-color-rgb), 0.3);
  }

  .bookbit-number {
    @apply text-sm font-bold;
    color: var(--text-secondary);
    font-family: DepartureMono, monospace;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .number-symbol {
    color: var(--accent-primary);
    @apply mr-1;
    font-size: 1.1rem;
  }

  .page-reference {
    @apply text-xs;
    color: var(--text-secondary);
    font-family: DepartureMono, monospace;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    opacity: 0.7;
  }

  .page-label {
    color: var(--accent-primary);
    @apply mr-1;
  }

  .bookbit-text {
    @apply mb-4 block;
    color: var(--text-primary);
    font-family: monospace;
    line-height: 1.7;
    font-size: 0.95rem;
    position: relative;
  }

  .quote-wrapper {
    position: relative;
    padding: 0 1.5rem;
  }

  .quote-mark {
    position: absolute;
    color: var(--accent-primary);
    font-size: 1.5rem;
    opacity: 0.3;
    font-family: Georgia, serif;
  }

  .quote-mark-open {
    left: 0;
    top: -0.5rem;
  }

  .quote-mark-close {
    right: 0;
    bottom: -0.5rem;
  }

  .quote-content {
    font-style: italic;
    text-align: justify;
    hyphens: auto;
  }

  .bookbit-footer {
    @apply pt-3;
    border-top: 1px dashed rgba(var(--border-color-rgb), 0.3);
  }

  .book-info {
    @apply flex items-center gap-2 text-sm;
    color: var(--text-secondary);
    font-family: DepartureMono, monospace;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .author-name {
    color: var(--text-secondary);
    font-weight: 500;
  }

  .separator {
    color: var(--accent-primary);
    opacity: 0.5;
  }

  .book-name {
    color: var(--text-primary);
    font-weight: 600;
  }

  /* Terminal cursor effect on hover */
  .bookbit-card:hover .quote-content::after {
    content: "▊";
    animation: cursor-blink 1s infinite;
    color: var(--accent-primary);
    font-weight: bold;
    margin-left: 2px;
  }

  @keyframes cursor-blink {
    0%,
    49% {
      opacity: 1;
    }
    50%,
    100% {
      opacity: 0;
    }
  }

  /* Subtle scan line effect on hover */
  .bookbit-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--accent-primary), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .bookbit-card:hover::before {
    opacity: 0.5;
    animation: scan-line 2s linear infinite;
  }

  @keyframes scan-line {
    0% {
      left: -100%;
    }
    100% {
      left: 100%;
    }
  }

  /* Mobile responsive adjustments */
  @media (max-width: 640px) {
    .bookbit-card {
      @apply p-4;
    }

    .bookbit-text {
      font-size: 0.875rem;
    }

    .quote-wrapper {
      padding: 0 1rem;
    }

    .book-info {
      font-size: 0.75rem;
      flex-wrap: wrap;
    }

    .quote-mark {
      font-size: 1.25rem;
    }
  }
</style>
