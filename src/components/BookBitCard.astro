---
export interface Props {
  id: number;
  text: string;
  author: string;
  book: string;
  page: string;
  bookIndex?: number;
  bitIndex?: number;
}

const { id, text, author, book, page, bookIndex = 0, bitIndex = 0 } = Astro.props;

const animationDelay = `${bookIndex * 0.1 + bitIndex * 0.05}s`;
---

<div
  class:list={["card-base", "card-base-default", "card-base-hoverable", "glitch-border-hover"]}
  style={`animation: slide-in 0.6s ease-out forwards; animation-delay: ${animationDelay}; opacity: 0;`}
>
  <div class="card-section-header bookbit-header">
    <span class="bookbit-number">
      <span class="number-symbol">§</span>{id.toString().padStart(3, "0")}
    </span>
    <span class="page-reference">
      <span class="page-label">Page</span>
      {page}
    </span>
  </div>

  <blockquote class="card-section-content bookbit-text">
    <div class="quote-wrapper">
      <span class="quote-mark quote-mark-open">❝</span>
      <p class="quote-content">{text}</p>
      <span class="quote-mark quote-mark-close">❞</span>
    </div>
  </blockquote>

  <div class="card-section-footer bookbit-footer">
    <div class="book-info">
      {
        author && author !== "" && (
          <>
            <span class="author-name">{author}</span>
            <span class="separator">•</span>
          </>
        )
      }
      <span class="book-name">{book}</span>
    </div>
  </div>
</div>

<style>
  /* BookBitCard-specific header layout */
  .bookbit-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .bookbit-number {
    font-size: 0.875rem;
    font-weight: bold;
    color: var(--text-secondary);
    font-family: DepartureMono, monospace;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .number-symbol {
    color: var(--accent-primary);
    margin-right: 0.25rem;
    font-size: 1.1rem;
  }

  .page-reference {
    font-size: 0.75rem;
    color: var(--text-secondary);
    font-family: DepartureMono, monospace;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    opacity: 0.7;
  }

  .page-label {
    color: var(--accent-primary);
    margin-right: 0.25rem;
  }

  /* BookBitCard-specific text content styling */
  .bookbit-text {
    display: block;
    color: var(--text-primary);
    font-family: monospace;
    line-height: 1.7;
    font-size: 0.95rem;
    position: relative;
  }

  .quote-wrapper {
    position: relative;
    padding: 0 1.5rem;
  }

  .quote-mark {
    position: absolute;
    color: var(--accent-primary);
    font-size: 1.5rem;
    opacity: 0.3;
    font-family: Georgia, serif;
  }

  .quote-mark-open {
    left: 0;
    top: -0.5rem;
  }

  .quote-mark-close {
    right: 0;
    bottom: -0.5rem;
  }

  .quote-content {
    font-style: italic;
    text-align: justify;
    hyphens: auto;
  }

  /* Book info styling */
  .book-info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
    font-family: DepartureMono, monospace;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .author-name {
    color: var(--text-secondary);
    font-weight: 500;
  }

  .separator {
    color: var(--accent-primary);
    opacity: 0.5;
  }

  .book-name {
    color: var(--text-primary);
    font-weight: 600;
  }

  /* Terminal cursor and CRT glitch effects (component-specific targeting) */
  @media (hover: hover) {
    .card-base-hoverable:hover .quote-content::after {
      content: "▊";
      animation: cursor-blink 1s infinite;
      color: var(--accent-primary);
      font-weight: bold;
      margin-left: 2px;
    }

    .card-base-hoverable:hover .quote-content {
      animation: crt-text-glitch 0.5s ease-in-out;
    }
  }

  /* Mobile responsive adjustments */
  @media (max-width: 640px) {
    .bookbit-text {
      font-size: 0.875rem;
    }

    .quote-wrapper {
      padding: 0 1rem;
    }

    .quote-content {
      text-align: left;
    }

    .book-info {
      font-size: 0.75rem;
      flex-wrap: wrap;
    }

    .quote-mark {
      font-size: 1.25rem;
    }
  }
</style>
