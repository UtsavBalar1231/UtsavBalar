---

<canvas id="sakura-fall-canvas" class="sakura-fall-canvas"></canvas>

<style>
  .sakura-fall-canvas {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    touch-action: none;
    opacity: 0.4;
    mix-blend-mode: screen;
    z-index: var(--z-background);
  }
</style>

<script>
  import { WebGLSakuraFall } from "@/utils/webglSakura";
  import { getRecommendedFPS, getBatteryLevel } from "@/utils/deviceDetection";
  import { hasTargetFPS, hasIsRunning, hasStartMethod, hasStopMethod } from "@/types/webglEffect";

  let sakuraEffect: WebGLSakuraFall | null = null;
  let themeObserver: MutationObserver | null = null;
  let isInitializing = false;
  let debounceTimer: number | null = null;
  let intersectionObserver: IntersectionObserver | null = null;
  let batteryCheckInterval: number | null = null;

  function shouldInitialize(): boolean {
    const theme = document.documentElement.getAttribute("data-theme");
    return theme === "monochrome";
  }

  async function initSakuraFall() {
    // Prevent concurrent initialization/cleanup
    if (isInitializing) {
      return;
    }

    isInitializing = true;

    try {
      if (shouldInitialize() && !sakuraEffect) {
        const recommendedFPS = getRecommendedFPS();
        sakuraEffect = new WebGLSakuraFall();
        sakuraEffect.initialize();
        if (hasTargetFPS(sakuraEffect)) {
          sakuraEffect.targetFPS = recommendedFPS;
        }
        setupIntersectionObserver();
        setupBatteryMonitoring();
      } else if (!shouldInitialize() && sakuraEffect) {
        cleanupObservers();
        sakuraEffect.cleanup();
        sakuraEffect = null;
      }
    } finally {
      isInitializing = false;
    }
  }

  function debouncedInitSakuraFall() {
    if (debounceTimer !== null) {
      clearTimeout(debounceTimer);
    }

    debounceTimer = window.setTimeout(() => {
      initSakuraFall();
      debounceTimer = null;
    }, 150); // 150ms debounce to match base class
  }

  function setupIntersectionObserver() {
    const canvas = document.getElementById("sakura-fall-canvas");
    if (!canvas || !sakuraEffect) return;
    intersectionObserver = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (hasIsRunning(sakuraEffect)) {
            if (entry.isIntersecting) {
              if (hasStartMethod(sakuraEffect)) {
                sakuraEffect.start();
              }
            } else {
              if (hasStopMethod(sakuraEffect)) {
                sakuraEffect.stop();
              }
            }
          }
        });
      },
      { threshold: 0.1 }
    );
    intersectionObserver.observe(canvas);
  }

  async function setupBatteryMonitoring() {
    batteryCheckInterval = window.setInterval(async () => {
      const batteryLevel = await getBatteryLevel();
      if (batteryLevel !== null && batteryLevel < 15) {
        if (hasStopMethod(sakuraEffect)) {
          sakuraEffect.stop();
        }
      }
    }, 30000);
  }

  function cleanupObservers() {
    if (intersectionObserver) {
      intersectionObserver.disconnect();
      intersectionObserver = null;
    }
    if (batteryCheckInterval !== null) {
      clearInterval(batteryCheckInterval);
      batteryCheckInterval = null;
    }
  }

  function setupThemeObserver() {
    themeObserver = new MutationObserver(debouncedInitSakuraFall);
    themeObserver.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ["data-theme"],
    });
  }

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", () => {
      initSakuraFall();
      setupThemeObserver();
    });
  } else {
    initSakuraFall();
    setupThemeObserver();
  }

  document.addEventListener("astro:page-load", initSakuraFall);

  document.addEventListener("astro:before-preparation", () => {
    if (debounceTimer !== null) {
      clearTimeout(debounceTimer);
      debounceTimer = null;
    }

    cleanupObservers();
    sakuraEffect?.cleanup();
    sakuraEffect = null;
    themeObserver?.disconnect();
    themeObserver = null;
  });
</script>
