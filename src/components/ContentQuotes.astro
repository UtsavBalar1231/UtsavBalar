---
import { getMdxQuotes } from '../data/mdxQuotesParser';

// Fetch quotes from MDX using our parser
const quotes = await getMdxQuotes();
---

<div class="quotes-container">
  {quotes.map((quote) => (
    <div class="quote-card">
      <div class="quote-content">
        <div class="quote-icon">❝</div>
        <blockquote>
          <p>{quote.text}</p>
          <cite>- <strong>{quote.author}</strong></cite>
        </blockquote>
        <div class="quote-icon quote-icon-end">❞</div>
      </div>
    </div>
  ))}
</div>

<style>
  .quotes-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    padding: 0.5rem;
  }

  .quote-card {
    background: rgba(var(--color-bg-secondary), 0.6);
    border: 1px solid rgba(var(--color-border-rgb), 0.6);
    border-radius: 0.75rem;
    padding: 1.5rem;
    box-shadow: 0 4px 6px rgba(var(--color-bg-primary), 0.7);
    transition: transform 0.2s, box-shadow 0.2s;
    overflow: hidden;
    position: relative;
    backdrop-filter: blur(10px);
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .quote-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 15px rgba(var(--color-bg-primary), 0.8);
  }

  .quote-content {
    position: relative;
    padding: 1rem 0;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .quote-icon {
    color: rgba(var(--color-accent-primary), 0.3);
    font-size: 4rem;
    line-height: 1;
    position: absolute;
    z-index: 0;
  }

  .quote-icon:first-child {
    top: -1rem;
    left: -0.5rem;
  }

  .quote-icon-end {
    bottom: -2.5rem;
    right: -0.5rem;
  }

  blockquote {
    margin: 0;
    padding: 0;
    border-left: none;
    background: transparent;
    font-style: italic;
    font-size: 1.1rem;
    line-height: 1.6;
    position: relative;
    z-index: 1;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  blockquote p {
    margin-bottom: 1rem;
    white-space: pre-line;
    flex: 1;
    color: var(--color-text-primary);
  }

  blockquote cite {
    font-style: normal;
    display: block;
    text-align: right;
    color: var(--color-accent-primary);
    font-weight: 500;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .quotes-container {
      grid-template-columns: 1fr;
    }
  }
</style> 