---
// Browser warning banner for unsupported browsers
// Pure client-side detection, no props needed
---

<div id="browser-warning" class="browser-warning" style="display: none;">
  <div class="warning-content">
    <span class="warning-icon" role="img" aria-label="Warning">⚠️</span>
    <span class="warning-text">
      Your browser is outdated. This site requires <strong>Chrome 90+</strong>,{" "}
      <strong>Firefox 88+</strong>, or <strong>Safari 16+</strong> for optimal experience.
    </span>
  </div>
</div>

<script>
  import { detectBrowser } from "@utils/browserDetection";

  // Show banner if browser is unsupported
  function initBrowserWarning() {
    const banner = document.getElementById("browser-warning");
    if (!banner) return;

    const browserInfo = detectBrowser();

    if (!browserInfo.isSupported) {
      banner.style.display = "flex";
      // Offset page content to account for banner height
      const mainContent = document.querySelector(".page-content");
      if (mainContent) {
        (mainContent as HTMLElement).style.marginTop = "60px";
      }
    }
  }

  // Initialize on page load
  document.addEventListener("DOMContentLoaded", initBrowserWarning);

  // Re-initialize after Astro view transitions
  document.addEventListener("astro:page-load", initBrowserWarning);
</script>

<style>
  .browser-warning {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: var(--z-modal);
    background: rgba(var(--error-rgb), 0.95);
    border-bottom: 2px solid var(--error);
    padding: 1rem;
    display: none;
    justify-content: center;
    align-items: center;
    min-height: 60px;
  }

  .warning-content {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    max-width: 800px;
    color: var(--text-primary);
  }

  .warning-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
    line-height: 1;
  }

  .warning-text {
    font-family: "DepartureMono", monospace;
    font-size: 0.9rem;
    line-height: 1.4;
  }

  .warning-text strong {
    color: var(--accent-primary);
    font-weight: 600;
  }

  @media (max-width: 640px) {
    .warning-content {
      flex-direction: column;
      text-align: center;
      gap: 0.5rem;
    }

    .warning-text {
      font-size: 0.85rem;
    }
  }
</style>
