---
import Layout from "../layouts/Layout.astro";
import MDXContent from "../components/MDXContent.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Resume">
  <main class="container mx-auto px-2 sm:px-4 md:max-w-6xl lg:px-8">
    <div class="terminal-card p-4 sm:p-6 md:p-8">
      <MDXContent collection="resume" slug="resume" class="resume-prose" />
      <p class="download-links">
        <a href="/downloads/resume.pdf" download>Download PDF</a>
        <a href="/downloads/resume.txt" download style="margin-left: 1rem;">Download TXT</a>
      </p>
    </div>
  </main>
  <Footer />
</Layout>

<style is:global>
  /* Resume-specific prose overrides for terminal theme */
  .resume-prose {
    color: var(--term-text);
    font-family: monospace;
  }
  .resume-prose h1,
  .resume-prose h2,
  .resume-prose h3 {
    font-family: DepartureMono, monospace;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    text-shadow: 0 0 2px currentColor;
  }
  .resume-prose a {
    font-family: DepartureMono, monospace;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .download-links {
    margin-top: 2rem;
  }
  .download-links a {
    color: var(--term-text);
    font-family: DepartureMono, monospace;
    text-decoration: underline;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
</style>
