---
import Layout from "../layouts/Layout.astro";
import Profile from "../components/Profile.astro";
import Socials from "../components/Socials.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Utsav Balar - Portfolio">
  <main class="container mx-auto px-2 sm:px-4 md:max-w-6xl lg:px-8">
    <div class="terminal-card animate-fade-in p-4 sm:p-6 md:p-8">
      <div class="grid grid-cols-1 items-start gap-8 md:grid-cols-2">
        <div class="profile-section">
          <Profile />
        </div>
        <div class="socials-section">
          <h2
            class="text-accent-primary glitch-text block text-lg font-bold font-ui-heading"
            style="margin: 1.5rem 0rem;"
          >
            <span class="font-ui-prompt terminal-prompt"></span>Connect
          </h2>
          <Socials />
        </div>
      </div>
      <div class="terminal-output mt-8 text-center text-xs text-text-secondary sm:text-sm">
        <span class="typing-text inline-block"></span>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  .container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: calc(100vh - 120px);
  }

  .terminal-card {
    @apply animate-fade-in;
  }

  @media (max-width: 767px) {
    .container {
      min-height: calc(100vh - 180px);
      padding-top: 1rem;
      padding-bottom: calc(60px + 1rem); /* Account for mobile nav + padding */
      align-items: flex-start;
    }
  }

  @media (orientation: landscape) and (max-height: 600px) {
    .container {
      min-height: auto;
      padding: 2rem 1rem;
    }
  }
</style>
