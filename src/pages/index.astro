---
import Layout from "../layouts/Layout.astro";
import Profile from "../components/Profile.astro";
import Socials from "../components/Socials.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Utsav Balar - Portfolio">
  <main class="container mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="terminal-card animate-fade-in p-8">
      <div class="grid grid-cols-1 items-start gap-8 md:grid-cols-2">
        <div class="profile-section">
          <Profile />
        </div>
        <div class="socials-section">
          <h2
            class="text-accent-primary glitch-text block text-lg font-bold"
            style="margin: 1.5rem 0rem;"
          >
            <span class="terminal-prompt"></span>Connect
          </h2>
          <Socials />
        </div>
      </div>
      <div class="terminal-output mt-8 text-center text-xs text-text-secondary sm:text-sm">
        <span class="typing-text inline-block"></span>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  .container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .terminal-card {
    animation: fadeIn 0.8s ease-in;
  }

  @media (max-width: 768px) {
    .container {
      min-height: 100vh;
      padding-top: 2rem;
      padding-bottom: 2rem;
    }
  }
</style>
