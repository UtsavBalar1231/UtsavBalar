---
import Layout from "../layouts/Layout.astro";
import SkillsGrid from "../components/SkillsGrid.astro";
---

<Layout title="Skills - Utsav Balar">
  <main class="container mx-auto max-w-6xl px-4 py-8 sm:px-6 lg:px-8">
    <div class="terminal-card animate-fade-in">
      <header class="mb-8">
        <h1 class="mb-4 text-xl font-bold" style="color: var(--text-primary);">Skills</h1>
      </header>

      <SkillsGrid />
    </div>
  </main>
</Layout>

<style>
  .terminal-card {
    @apply animate-fade-in p-6 sm:p-8;
  }
</style>
